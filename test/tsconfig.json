{
    "compilerOptions": {
        "baseUrl": "src",
        "lib": ["es2017", "DOM"],
        "module": "commonjs",
        "target": "es5",
        "moduleResolution": "node",
        "allowUnreachableCode": true,
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "strict": true,
        "sourceMap": true,
        "types": ["node", "mocha"],
        "typeRoots": ["../node_modules/@types"],
        "noErrorTruncation": true
    },
    "exclude": ["node_modules"]
}
